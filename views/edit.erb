<form action="/student/<%= @student.id%>" method="post">
  
  <label for="first-name">First Name:</label>
  <input type="text" id="first-name" name="first_name" value="<%= @student.first_name%>"><br>

  <label for="last-name">Last Name:</label>
  <input type="text" id="last-name" name="last_name" value=" <%= @student.last_name%>"><br>

  <label for="house-select">Select a House:</label>
  <select name="house_id" id="house-select">
  <%for house in @houses%>
    <% if @student.house_id == house.id %>
      <option selected value="<%=house.id%>"><%=house.name()%></option>
    <% else %>
      <option value="<%=house.id%>"><%=house.name()%></option>
    <%end%>
  <%end%>
  </select><br>

  <label for="age">Age:</label>
  <input type="number" id="age" name="age" value="<%= @student.age%>"><br>

  <input class="button" type="submit" value="Edit Student">

</form>